{
  "name": "request-compose",
  "version": "0.0.2",
  "description": "Composable HTTP Client",
  "keywords": [
    "compose",
    "composable",
    "http",
    "client"
  ],
  "license": "Apache-2.0",
  "homepage": "https://github.com/simov/request-compose",
  "author": "Simeon Velichkov <simeonvelichkov@gmail.com> (https://simov.github.io)",
  "repository": {
    "type": "git",
    "url": "https://github.com/simov/request-compose.git"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.0",
    "istanbul": "1.1.0-alpha.1",
    "mocha": "^5.0.0",
    "request-logs": "0.0.3"
  },
  "bin": {},
  "main": "./build/index.js",
  "files": [
    "build/",
    "request/",
    "response/",
    "compose.js",
    "index.js",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "test": "npm run test:ci",
    "test:ci": "mocha build/test/ --recursive",
    "test:cov": "SOURCE=1 istanbul cover _mocha -- --recursive",
    "build:request": "babel request --out-dir build/request",
    "build:response": "babel response --out-dir build/response",
    "build:test": "babel test --out-dir build/test",
    "build:compose": "babel compose.js --out-file build/compose.js",
    "build:index": "babel index.js --out-dir build --copy-files",
    "copy:test/ssl": "babel test/ssl --out-dir build/test/ssl --copy-files",
    "build": "rm -rf build/ && mkdir -p build && npm run build:request && npm run build:response && npm run build:test && npm run build:compose && npm run copy:test/ssl && npm run build:index",
    "prepublish": "npm run build"
  },
  "engines": {
    "node": ">=4.0.0"
  }
}
