{
  "name": "request-compose",
  "version": "0.0.4",
  "description": "Composable HTTP Client",
  "keywords": [
    "compose",
    "composable",
    "http",
    "client"
  ],
  "license": "Apache-2.0",
  "homepage": "https://github.com/simov/request-compose",
  "author": "Simeon Velichkov <simeonvelichkov@gmail.com> (https://simov.github.io)",
  "repository": {
    "type": "git",
    "url": "https://github.com/simov/request-compose.git"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.0",
    "istanbul": "1.1.0-alpha.1",
    "mocha": "^5.0.0",
    "request-logs": "0.0.4"
  },
  "bin": {},
  "main": "./build/index.js",
  "files": [
    "build/",
    "request/",
    "response/",
    "compose.js",
    "index.js",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "test": "npm run test:ci",
    "test:ci": "v=$(node -v | cut -b 2-2) && if [ $v -ge 8 ]; then p=\"test\"; else p=\"build/test\"; fi && mocha $p --recursive",
    "test:cov": "istanbul cover _mocha -- --recursive",
    "build:request": "npx babel request --out-dir build/request",
    "build:response": "npx babel response --out-dir build/response",
    "build:test": "npx babel test --out-dir build/test",
    "copy:test/ssl": "npx babel test/ssl --out-dir build/test/ssl --copy-files",
    "build:main": "npx babel *.js --out-dir build",
    "build": "rm -rf build/ && mkdir -p build && npm run build:request && npm run build:response && npm run build:test && npm run copy:test/ssl && npm run build:main",
    "prepublish": "npm run build"
  },
  "engines": {
    "node": ">=4.0.0"
  }
}
